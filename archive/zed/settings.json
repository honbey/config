{
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:7b"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Frapp√©"
  },
  "auto_update": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": true
  },
  "format_on_save": "off",
  //"buffer_font_family": "ComicShannsMono Nerd Font Mono",
  "buffer_font_family": "Maple Mono NF",
  "buffer_font_fallbacks": [
    "LXGW WenKai Mono"
  ],
  "ui_font_family": "LXGW WenKai Mono",
  "ui_font_weight": 600,
  "language_models": {
    "ollama": {
      // modify hosts to access
      // IP whitelist for security or law
      "api_url": "https://ollama.local.zhang:9090"
    }
  }
